//
// Pager
// --------------------------------------------------------------------------

.pager
    clearfix()
    margin 20px 0


// Amout
// --------------------------------------------------------------------------

.pager-amount
    float left
    width 40%
    padding 0 15px 0 0
    font-size 1.2rem

    @media (min-width $screen-sm-min)
        font-size 1.5rem

// Limiter
// --------------------------------------------------------------------------

.pager-limiter
    float right
    width 60%
    padding 0 0 0 15px
    font-size 1.2rem
    text-align right

    label
        font-weight normal

    .form-group
        display inline-block
        margin-bottom 0
        vertical-align middle

    .form-control
        display inline-block
        width auto
        height 26px
        vertical-align middle
        padding $padding-xs-vertical $padding-xs-horizontal
        font-size 1.2rem

    span
        display inline-block
        line-height $line-height-base
        vertical-align top

    @media (min-width $screen-sm-min)
        font-size 1.5rem

        .form-control
            font-size 1.6rem


// Pagination
// --------------------------------------------------------------------------

.pager-pagination
    clear both
    padding 20px 0 0
    text-align center

    .pagination
        margin 0
