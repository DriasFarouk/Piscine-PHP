//
// Variables
// --------------------------------------------------------------------------


// Colors
// --------------------------------------------------------------------------

$color-dark ?=                    #000
$color-gray-darker ?=             lighten($color-dark, 13.5%) // #222
$color-gray-dark ?=               lighten($color-dark, 20%)   // #333
$color-gray ?=                    #4A4A4A
$color-gray-light ?=              lighten($color-dark, 87.5%) // #ddd
$color-gray-lighter ?=            lighten($color-dark, 93.5%) // #eee

$color-primary ?=                 #8F0928

$color-info ?=                    #31708f
$color-success ?=                 #3c763d
$color-warning ?=                 #8a6d3b
$color-error ?=                   #a94442

$color-facebook ?=                #3b5998
$color-twitter ?=                 #1da1f2

// Core
// --------------------------------------------------------------------------

$body-bg ?=                       #fff
$text-color ?=                    $color-dark
$link-color ?=                    $color-primary
$link-hover-color ?=              lighten($link-color, 20%)
$link-hover-decoration ?=         underline


// Typography
// --------------------------------------------------------------------------

$font-family-sans-serif ?=        Helvetica, Arial, sans-serif
$font-family-serif ?=             Georgia, "Times New Roman", Times, serif

$font-family-ibm-plex-sans ?=      "IBM Plex Sans", Helvetica, Arial, sans-serif
$font-family-ibm-plex-serif ?=     "IBM Plex Serif", Georgia, "Times New Roman", Times, serif
$font-family-raleway ?=            Raleway, Helvetica, Arial, sans-serif

$font-family-base ?=              $font-family-ibm-plex-sans

$font-size-base ?=                1.7rem // ~17px
$line-height-base ?=              1.6
//** Computed "line-height" (`font-size` * `line-height`) for use with `margin`, `padding`, etc.
$line-height-computed ?=   floor($font-size-base * $line-height-base) // ~20px

$font-size-large ?=               2rem // ~20px
$font-size-small ?=               1.5rem // ~15px


// Components
// --------------------------------------------------------------------------

$padding-base-vertical ?=         6px
$padding-base-horizontal ?=       12px

$padding-large-vertical ?=        10px
$padding-large-horizontal ?=      20px

$padding-small-vertical ?=        5px
$padding-small-horizontal ?=      10px

$padding-xs-vertical ?=           1px
$padding-xs-horizontal ?=         5px


// States for infos, success, warnings and errors
// --------------------------------------------------------------------------

$state-info-text ?=              $color-info
$state-info-bg ?=                lighten($state-info-text, 88%)
$state-info-border ?=            darken(spin($state-info-bg, -10), 5%)

$state-success-text ?=           $color-success
$state-success-bg ?=             lighten($state-success-text, 88%)
$state-success-border ?=         darken(spin($state-success-bg, -10), 5%)

$state-warning-text ?=           $color-warning
$state-warning-bg ?=             lighten($state-warning-text, 88%)
$state-warning-border ?=         darken(spin($state-warning-bg, -10), 5%)

$state-error-text ?=             $color-error
$state-error-bg ?=               lighten($state-error-text, 88%)
$state-error-border ?=           darken(spin($state-error-bg, -10), 5%)


// Z-index
// --------------------------------------------------------------------------

$zindex-dropdown ?=               1000
$zindex-fixed ?=                  1010
$zindex-modal-background ?=       1020
$zindex-modal ?=                  1030
$zindex-offcanvas ?=              1040


// Media queries breakpoints
// --------------------------------------------------------------------------

$screen-xs-min ?=                 480px
$screen-sm-min ?=                 768px
$screen-md-min ?=                 992px
$screen-lg-min ?=                 1200px

$screen-xs-max ?=                 ($screen-sm-min - 1)
$screen-sm-max ?=                 ($screen-md-min - 1)
$screen-md-max ?=                 ($screen-lg-min - 1)

//== Navbar
//
//##

// Basics of a navbar
$gutter ?=   30px
$navbar-height ?=                  50px
$navbar-margin-bottom ?=           $line-height-computed
$navbar-border-radius ?=           $border-radius-base
$navbar-padding-horizontal ?=      floor($gutter / 2)
$navbar-padding-vertical ?=        (($navbar-height - $line-height-computed) / 2)
$navbar-collapse-max-height ?=     340px

$navbar-default-color ?=           #777
$navbar-default-bg ?=              #f8f8f8
$navbar-default-border ?=          darken($navbar-default-bg, 6.5)

// Navbar links
$navbar-default-link-color ?=              #777
$navbar-default-link-hover-color ?=        #333
$navbar-default-link-hover-bg ?=           transparent
$navbar-default-link-active-color ?=       #555
$navbar-default-link-active-bg ?=          darken($navbar-default-bg, 6.5)
$navbar-default-link-disabled-color ?=     #ccc
$navbar-default-link-disabled-bg ?=        transparent

// Navbar brand label
$navbar-default-brand-color ?=             $navbar-default-link-color
$navbar-default-brand-hover-color ?=       darken($navbar-default-brand-color, 10)
$navbar-default-brand-hover-bg ?=          transparent

// Navbar toggle
$navbar-default-toggle-hover-bg ?=         #ddd
$navbar-default-toggle-icon-bar-bg ?=      #888
$navbar-default-toggle-border-color ?=     #ddd
