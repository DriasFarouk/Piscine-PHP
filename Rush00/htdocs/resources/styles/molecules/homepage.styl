//
// Homepage
// --------------------------------------------------------------------------

.homepage-summary
    clearfix()
    min-height 100vh

.homepage-left,
.homepage-illustration
    @media (min-width $screen-sm-min)
        column('1/2')

.homepage-left
    @media (min-width $screen-sm-min)
        move('-1/2')

.homepage-illustration
    @media (min-width $screen-sm-min)
        move('1/2')

.homepage-infos
    padding 10px 20px

    @media (min-width $screen-sm-min)
        padding 50px 100px 0

.homepage-title
    font-family $font-family-raleway
    font-weight 800
    font-size 4.7rem
    color $color-gray
    margin 10px 0

    @media (min-width $screen-sm-min)
        font-size 6.7rem
        margin 60px 0 80px

.ceremonies
    height min-100vh
    padding 0 20px 20px

.homepage-ceremony-details
    background $color-gray-lighter
    font-weight 300
    color $color-gray
    font-size 1.5rem
    padding 30px
    margin 0 0 10px 0

    @media (min-width $screen-sm-min)
        font-size 1.7rem
        padding 80px 100px
        margin 0 0 20px 0

.homepage-ceremony-details__date
    font-family $font-family-raleway
    font-weight 800
    font-size 3.0rem
    line-height 3.5rem

    @media (min-width $screen-sm-min)
        font-size 5.0rem
        line-height 6.7rem

.homepage-ceremony-details__place
    font-size 2rem

    @media (min-width $screen-sm-min)
        font-size 2.6rem

.homepage-ceremony-details__teasing, .homepage-ceremony-details__cta
    margin-top 15px

    @media (min-width $screen-sm-min)
        margin-top 30px

.homepage-intro
    font-weight 300
    color $color-gray
    font-size 1.5rem
    line-height 3rem
    margin 40px 0

    @media (min-width $screen-sm-min)
        margin 60px 0
        font-size 1.7rem
        line-height 3.5rem

.homepage-illustration
    padding 20px
    background #fff

.homepage-illustration__img
    background url('images/nativelle.jpg') center center no-repeat
    background-size cover
    height 300px

    @media (min-width $screen-sm-min)
        height calc(100vh - 40px)